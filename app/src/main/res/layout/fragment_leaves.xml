<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.LeavesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="21dp"
            android:gravity="center_horizontal"
            android:text="All"
            android:textColor="#37394c"
            android:textSize="20sp" />

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp">

                    <RelativeLayout
                        android:layout_width="90dp"
                        android:layout_height="104dp">

                        <TextView
                            android:id="@+id/title_view_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="13sp"
                            android:lineSpacingExtra="8sp"
                            android:text="Casual"
                            android:textColor="#5babfb"
                            android:textSize="16sp" />

                        <LinearLayout
                            android:id="@+id/leave_holder_view_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/title_view_1"
                            android:layout_centerHorizontal="true">

                            <TextView
                                android:id="@+id/no_of_leaves_casual"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="13"
                                android:textColor="#5babfb"
                                android:textSize="21sp" />

                            <TextView
                                android:id="@+id/total_no_of_leaves_view_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="/15"
                                android:textColor="#5babfb"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/summary_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/leave_holder_view_1"
                            android:layout_centerHorizontal="true"
                            android:maxLines="2"
                            android:text="Available per \nyear"
                            android:textAlignment="center"
                            android:textColor="#5babfb"
                            android:textSize="8sp" />
                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="12dp">

                    <RelativeLayout
                        android:layout_width="90dp"
                        android:layout_height="104dp">

                        <TextView
                            android:id="@+id/title_view_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="13sp"
                            android:lineSpacingExtra="8sp"
                            android:text="Sick"
                            android:textColor="#cbc704"
                            android:textSize="16sp" />

                        <LinearLayout
                            android:id="@+id/leave_holder_view_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/title_view_2"
                            android:layout_centerHorizontal="true">

                            <TextView
                                android:id="@+id/no_of_leaves_sick"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="13"
                                android:textColor="#cbc704"
                                android:textSize="21sp" />

                            <TextView
                                android:id="@+id/total_no_of_leaves_view_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="/15"
                                android:textColor="#cbc704"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/summary_view_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/leave_holder_view_2"
                            android:layout_centerHorizontal="true"
                            android:maxLines="2"
                            android:text="Available per \nyear"
                            android:textAlignment="center"
                            android:textColor="#cbc704"
                            android:textSize="8sp" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="12dp">

                    <RelativeLayout
                        android:layout_width="90dp"
                        android:layout_height="104dp">

                        <TextView
                            android:id="@+id/title_view_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="13sp"
                            android:lineSpacingExtra="8sp"
                            android:text="Paid"
                            android:textColor="#a2d072"
                            android:textSize="16sp" />

                        <LinearLayout
                            android:id="@+id/leave_holder_view_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/title_view_3"
                            android:layout_centerHorizontal="true">

                            <TextView
                                android:id="@+id/no_of_leaves_paid"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="13"
                                android:textColor="#a2d072"
                                android:textSize="21sp" />

                            <TextView
                                android:id="@+id/total_no_of_leaves_view_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="/15"
                                android:textColor="#a2d072"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/summary_view_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/leave_holder_view_3"
                            android:layout_centerHorizontal="true"
                            android:maxLines="2"
                            android:text="Available per \nyear"
                            android:textAlignment="center"
                            android:textColor="#a2d072"
                            android:textSize="8sp" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="22dp">

                    <RelativeLayout
                        android:layout_width="90dp"
                        android:layout_height="104dp">

                        <TextView
                            android:id="@+id/title_view_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="13sp"
                            android:lineSpacingExtra="8sp"
                            android:text="Optional"
                            android:textColor="#e86565"
                            android:textSize="16sp" />

                        <LinearLayout
                            android:id="@+id/leave_holder_view_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/title_view_4"
                            android:layout_centerHorizontal="true">

                            <TextView
                                android:id="@+id/no_of_leaves_optional"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="13"
                                android:textColor="#e86565"
                                android:textSize="21sp" />

                            <TextView
                                android:id="@+id/total_no_of_leaves_view_4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="/15"
                                android:textColor="#e86565"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/summary_view_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/leave_holder_view_4"
                            android:layout_centerHorizontal="true"
                            android:maxLines="2"
                            android:text="Available per \nyear"
                            android:textAlignment="center"
                            android:textColor="#e86565"
                            android:textSize="8sp" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </HorizontalScrollView>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="23dp"
                android:gravity="center_horizontal"
                android:text="Leave Status"
                android:textColor="#37394c"
                android:textSize="20sp"
                android:textStyle="bold" />

            <android.support.v7.widget.RecyclerView
            android:id="@+id/leavesRecycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="60dp"
            />

            <ImageView
                android:visibility="gone"
                android:id="@+id/leaveImageView"
                android:layout_width="200dp"
                android:layout_gravity="center"
                android:layout_height="200dp"
                android:src="@drawable/ic_leave" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/newLeave"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_marginEnd="23dp"
                android:layout_marginRight="23dp"
                android:layout_marginBottom="20dp"
                android:scaleType="center"
                android:src="@drawable/ic_add"
                app:backgroundTint="@null"
                app:maxImageSize="30dp" />
        </FrameLayout>


    </LinearLayout>



</FrameLayout>