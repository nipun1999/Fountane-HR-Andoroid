<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/date_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/monthGrievanceTxtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Jan"
                android:textColor="#0887ff"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/dateGrievanceTxtView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="26"
                android:textAlignment="center"
                android:textColor="#0887ff"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/grievanceDescTxtView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toEndOf="@id/date_view"
            android:lineSpacingExtra="6sp"
            android:text="This is my grievance This is my grievance This is my grievance This is my grievance This is my grievance This is my grievance"
            android:textColor="#6d7278"
            android:textSize="14sp"
            android:layout_toRightOf="@id/date_view" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/grievanceStatusTxtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/grievanceDescTxtView"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="5dp"
            android:text="Pending"
            android:textColor="#b0b1b2"
            android:textSize="12sp" />

        <TextView
            android:gravity="right"
            android:id="@+id/timeGrievanceTxtView"
            android:layout_marginBottom="1dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="35dp"
            android:text="12:45 AM"
            android:textColor="#b0b1b2"
            android:textSize="9sp"
            android:layout_marginRight="35dp"/>

    </LinearLayout>

</LinearLayout>