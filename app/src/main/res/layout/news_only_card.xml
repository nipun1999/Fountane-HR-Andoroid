<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="20dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView_collapse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="3dp"
        android:layout_marginLeft="3dp"
        android:focusable="true">

        <LinearLayout
            android:id="@+id/linearLayoutHolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="1dp">


            <ImageView
                android:id="@+id/newsImageView"
                android:layout_width="250dp"
                android:layout_height="160.7dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10.5dp"
                    android:layout_marginTop="6dp"
                    android:layout_weight="0"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/monthTxtView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jan"
                        android:textColor="#0887ff"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/dateTxtView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="26"
                        android:textColor="#0887ff"
                        android:textSize="16sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/titleTxtView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="fill_vertical"
                    android:layout_marginStart="15.5dp"
                    android:layout_marginLeft="15.5dp"
                    android:layout_marginEnd="29dp"
                    android:layout_marginBottom="6dp"
                    android:layout_weight="1"
                    android:text="New Fountane logo launch Office Brunch Party"
                    android:textSize="16sp" />


                <ImageButton
                    android:id="@+id/categoryExpandBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="0"
                    android:background="?selectableItemBackgroundBorderless"
                    android:fontFamily="sans-serif"
                    android:src="@drawable/ic_arrow_point_to_right"
                    android:textAllCaps="false"
                    android:textColor="#0887ff"
                    android:textSize="12sp"
                    android:textStyle="normal" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/locationTxtView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="49dp"
                    android:text="Fountane, India"
                    android:textColor="#b0b1b2"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/timeTxtView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="12:45 AM"
                    android:gravity="right"
                    android:paddingRight="20dp"
                    android:layout_gravity="right"
                    android:textColor="#b0b1b2"
                    android:textSize="9sp" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>